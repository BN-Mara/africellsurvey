<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.FormFragment">

    <!-- TODO: Update blank fragment layout -->




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutCard"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/local"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/totalLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="30dp"
            android:layout_height="80dp"/>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remote"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/totalRemote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >
        <TextView
            android:id="@+id/ftitle_version"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/test_title"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/descr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="this is a description of form"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/fdate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="03/12/2020"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="0dp" >
    </View>><LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    >

    <Button
        android:id="@+id/buttonBk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:background="@color/black"
        android:layout_marginStart="10dp"
        />
    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/buton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to form"
        app:icon="@drawable/ic_add"
        app:iconGravity="start"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/color_white"
        android:backgroundTint="@color/colorPrimary"
        app:iconTint="@color/color_white"
        android:layout_gravity="right"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/d_40dp"
        android:layout_marginTop="@dimen/d_32dp"
        android:layout_marginBottom="@dimen/d_16dp"
        android:layout_marginLeft="@dimen/d_16dp"/>
</LinearLayout>




</LinearLayout>